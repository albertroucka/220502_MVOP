<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="_220502_MVOP.HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image x:Name="img_home" Grid.Row="0" Margin="30" Source="planet_main.png"/>
        <Label Grid.Row="2" Text="Vítejte v této apliakci o planetách (nejen) naší sluneční soustavy!" FontSize="20" TextColor="Black" HorizontalTextAlignment="Center" Margin="40,0,40,0"/>
    </Grid>

</ContentPage>
